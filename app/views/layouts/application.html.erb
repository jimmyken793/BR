<!DOCTYPE html>
<html>
    <head>
        <title>BR</title>
        <%= stylesheet_link_tag :all %>
        <%= javascript_include_tag :defaults %>
        <%= csrf_meta_tag %>
    </head>
    <body>
        <% if !flash[:notice].nil? %>
        <p style="color: red">
            <%= flash[:notice] %>
        </p>
        <% end %>
        <% if !flash[:error].nil? %>
        <p style="color: red">
            <%= flash[:error] %>
        </p>
        <% end %>
        <%= yield %>
    </body>
</html>
